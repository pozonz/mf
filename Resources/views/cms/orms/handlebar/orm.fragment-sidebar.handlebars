                Versions

                <ul class="article-version-list__dropdown">
                    <li class="article-version-list__item">
                        <h2 class="article-version-list__cat">Current version</h2>
                        <div class="article-version-link-item">
                            <a class="article-version-link article-version-link--current {{#compare isRestoringFromVersion 1 operator='!=' }}active{{/compare}}" href="{{ cancelVersionRestoreUrl }}">
                                {{ currentOrmDateTime }}
                                <div class="article-version-link__name">{{ currentOrmAuthor }}</div>
                            </a>
                        </div>
                    </li>

                    {{#ifNotEmpty history.drafts}}
                        <li class="article-version-list__item">
                            <h2 class="article-version-list__cat">Drafts</h2>
                            {{#each history.drafts}}
                                <div class="article-version-link-item">
                                    <a class="article-version-link article-version-link--draft {{#compare deleteId ../versionOrmId operator='==' }}active{{/compare}}" href="{{ url }}">
                                        {{ datetime }}
                                        <div class="article-version-link__name">{{ author }}</div>
                                    </a>
                                    <button class="js-delete-version icon article-version-link__remove" data-classname="{{ deleteClass}}" data-id="{{ deleteId }}" title="Remove this">
                                        <span class="visuallyhidden">Remove</span>
                                    </button>
                                </div>
                            {{/each}}
                        </li>
                    {{/ifNotEmpty}}

                    {{#ifNotEmpty history.versions}}
                        <li class="article-version-list__item">
                            <h2 class="article-version-list__cat">Recent</h2>
                            {{#each history.versions}}
                                <div class="article-version-link-item">
