        <a class="addForm button" href="{{ node.url }}/new?returnUrl={{ app.request.uri|url_encode }}">Add new record â€º</a>
    </div>


    <div class="nestable-lists js-model-wrapper" data-modelname="{{ ormModel.className }}">
