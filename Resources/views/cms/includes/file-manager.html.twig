<input type="hidden" id="currentFolderId" value="{{ app.request.session.get('currentFolderId') ?: 0 }}"/>
<div id="popup-container" style="height: 100%">
    <div class="row">
        <div class="col-lg-12" style="padding: 0">
            <div class="ibox">
                <div class="ibox-title" style="min-height: 55px">
                    <div class="js-nav"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3">
            <div id="js-folders"></div>
        </div>
        <div id="js-files" class="col-lg-9">
            <ul id="filesImageList" class="contentListTable assets-images ui-sortable">
                <li class="dropzone-wrap" id="dropzone-wrap">
                    <div>
                        <div class="dropzone-custom dz-clickable" action="/manage/rest/asset/files/upload" id="cmsFormDropzone">
                            <div class="dz-default dz-message"><span>Drop files here to upload</span></div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="extra-stuff" style="display: none;">
        <div class="pull-left">
            <button class="btn btn-sm btn-primary js-select-all" type="button"><i class="fa fa-toggle-on"></i>&nbsp;Select all</button>
            <button class="btn btn-sm btn-primary btn-outline js-deselect-all" type="button"><i class="fa fa-toggle-off"></i>&nbsp;&nbsp;<span class="bold">Deselect all</span></button>
        </div>

        <div class="pull-right">
            <button class="btn btn-sm btn-success btn-outline" type="button" onclick="$.fancybox.close();"><i class="fa fa-check"></i>&nbsp;Finish</button>
        </div>
    </div>
</div>